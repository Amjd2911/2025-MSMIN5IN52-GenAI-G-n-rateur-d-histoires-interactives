# Environment Configuration
ENV=development
DEBUG=True

# Server Configuration
HOST=127.0.0.1
PORT=8000

# AI Models Configuration
# Text Generation Model
TEXT_MODEL_NAME=Qwen/Qwen2-7B-Instruct
TEXT_MODEL_DEVICE=auto  # or cuda if GPU available

# Image Generation Model
IMAGE_MODEL_NAME=stabilityai/stable-diffusion-xl-base-1.0
IMAGE_MODEL_DEVICE=auto  # or cuda if GPU available

# External APIs (Optional)
# OPENAI_API_KEY=your_openai_api_key_here
# HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Story Configuration
MAX_STORY_LENGTH=10000
MAX_CONTEXT_LENGTH=4000
DEFAULT_GENRE=fantasy

# File Storage
STORIES_PATH=./data/stories
IMAGES_PATH=./data/images

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log